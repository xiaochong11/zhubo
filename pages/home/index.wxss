.home-page{
	font-size:30rpx;
	font-family:PingFangSC-Regular;
}
.home-top{
	width:100%;
}
.search-sec{
	padding:14rpx 0;
}
.search{
	margin:0 auto;
	width:618rpx;
	height:92rpx;
	background-size: 100% 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.search .search-icon{
	width:32rpx;
	height:32rpx;
	background-size: 100% 100%;
}
.search .search-prompt{
	font-size:32rpx;
	font-family:PingFangSC-Regular;
	color:rgba(66,192,255,1);
	line-height:92rpx;
	margin-left:8rpx;
}
.anchor-li{
	display: flex;
	/*justify-content: center;*/
	align-items: center;
	padding:35rpx 20rpx;
	border-bottom:1rpx solid #eee;
}
.anchor-container .anchor-order{
	height: 40rpx;
	line-height: 40rpx;
    padding: 0 10rpx;
    position: relative;
    top: -4rpx;
    margin-right: 10rpx;

	color: #29d58e;
    border: 2rpx solid #29d58e;
    border-radius: 6rpx;
    background: #edfcf6;

    font-size:24rpx;
   
}
.anchor-container .anchor-avatar image{
	width:150rpx;
	border-radius: 50%;
	margin-right: 32rpx;
	margin-left:10rpx;
	display: block;
}
.anchor-container .anchor-info{
	width:300rpx;
}
.anchor-info .anchor-name{
	font-size:34rpx;
	font-weight:400;
	color:rgba(53,53,53,1);
	line-height:48rpx;
	width: 300rpx;
	
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.anchor-info .anchor-comment{
	color:#999;
	font-size:28rpx;
}

.anchor-container .anchor-button{
	border:1rpx solid #0099FF;
	color:#0099FF;
	border-radius:10rpx;
	font-size:28rpx;
	line-height: 28rpx;
	padding:18rpx 28rpx;
}